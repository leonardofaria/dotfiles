[user]
	name = Leonardo Faria
	email = leonardofaria@gmail.com

[github]
  user = leonardofaria

[core]
	excludesfile = /Users/leonardo/.gitignore
	precomposeunicode = true
	autocrlf = ""
	pager = delta
	edit = code

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 

[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[http]
	sslverify = false

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[push]
	default = current

[alias]
	st = status --short --branch
	graph = log --oneline --graph --decorate
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	conflicts = diff --name-only --diff-filter=U
	undo = !git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}
	local-branches = !git branch -vv | cut -c 3- | awk '$3 !~/\\[/ { print $1 }'
	recent-branches = !git branch --sort=-committerdate | head
	cleanup = !git reset --hard && git clean -f
	authors = !git log --format='%aN <%aE>' | grep -v 'users.noreply.github.com' | sort -u --ignore-case
  commits-day = !git log --date=short --pretty=format:%ad | sort | uniq -c

  # Github - https://salferrarello.com/git-alias-open-pull-request-github/
  pr = "!f() { \
      open \"$(git ls-remote --get-url $(git config --get branch.$(git rev-parse --abbrev-ref HEAD).remote) \
      | sed 's|git@github.com:\\(.*\\)$|https://github.com/\\1|' \
      | sed 's|\\.git$||'; \
      )/compare/$(\
      git config --get branch.$(git rev-parse --abbrev-ref HEAD).merge | cut -d '/' -f 3- \
      )?expand=1\"; \
  }; f"
  hub = "!f() { \
      open \"$(git ls-remote --get-url \
      | sed 's|git@github.com:\\(.*\\)$|https://github.com/\\1|' \
      | sed 's|\\.git$||'; \
      )\"; \
  }; f"

[diff]
	algorithm = histogram

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[delta]
  # See all config with delta --show-config
  side-by-side = false
  line-numbers = true
  light = true
  tabs = 2
  # See all themes with delta --show-syntax-themes
  features = GitHub
[commit]
	template = /Users/leonardo/.stCommitMsg
[init]
	defaultBranch = main
