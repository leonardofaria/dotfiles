alias json="json -c"
alias ls="exa"
alias cat="bat --theme=GitHub "
alias watch="viddy"
alias convert-heic="magick mogrify -monitor -format jpg *.HEIC"
alias speed-test="repeat 10000 { date +\"%T\"; fast -u --single-line; sleep 1 }"
alias branch="rm .git/index.lock; git branch --sort=-committerdate | cut -c 3- | gum choose --no-limit | xargs git checkout "
alias amend-push="git commit -a --amend --no-edit --no-verify && git push -f --no-verify"

# HSTR configuration - add this to ~/.bashrc
alias hh=hstr                    # hh to be alias for hstr
export HISTFILE=~/.zsh_history  # ensure history file visibility
export HSTR_CONFIG=hicolor        # get more colors
bindkey -s "\C-r" "\eqhstr\n"     # bind hstr to Ctrl-r (for Vi mode check doc)

export LOCAL_IP=$(ifconfig | grep "inet " | grep -Fv 127.0.0.1 | awk '{print $2}')
